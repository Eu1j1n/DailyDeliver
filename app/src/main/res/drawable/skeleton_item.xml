<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- 스켈레톤 이미지 -->
    <View
        android:id="@+id/skeletonImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- 스켈레톤 제목 -->
    <View
        android:id="@+id/skeletonTitle"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toEndOf="@+id/skeletonImage"
        app:layout_constraintTop_toTopOf="@+id/skeletonImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 스켈레톤 지역 -->
    <View
        android:id="@+id/skeletonLocation"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toEndOf="@+id/skeletonImage"
        app:layout_constraintTop_toBottomOf="@+id/skeletonTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 스켈레톤 게시 시간 -->
    <View
        android:id="@+id/skeletonTime"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toEndOf="@+id/skeletonImage"
        app:layout_constraintTop_toBottomOf="@+id/skeletonLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 스켈레톤 가격 -->
    <View
        android:id="@+id/skeletonPrice"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toEndOf="@+id/skeletonImage"
        app:layout_constraintTop_toBottomOf="@+id/skeletonTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
